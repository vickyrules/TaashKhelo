<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".about">


  <RelativeLayout
      android:id="@+id/relative"
      android:layout_width="match_parent"
      android:layout_height="625dp"
      android:background="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/dashboard"
      app:layout_constraintVertical_bias="1.0">


    <TextView
        android:id="@+id/about_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="245dp"
        android:editable="false"
        android:gravity="center"
        android:inputType="none"
        android:paddingLeft="8dp"
        android:text="About the App: "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="269dp"
        android:layout_marginRight="35dp"
        android:paddingLeft="8dp"
        android:text="Almost everyone searches for paper  and pen while playing cards to write their points and waits for the score count.This app is the solution to all   such struggles."

        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/about_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="369dp"
        android:editable="false"
        android:gravity="center"
        android:inputType="none"
        android:paddingLeft="8dp"
        android:text="Developer: "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/red_divider"
        android:elevation="31dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="12dp">

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:background="@drawable/vikas"
          android:scaleType="fitXY"
          android:src="@drawable/image_shape"

          />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/about_dev.info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="410dp"
        android:editable="false"
        android:gravity="center"
        android:inputType="none"
        android:text="Vikas Kumar \n "
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_dev.info_emial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="430dp"
        android:editable="false"
        android:gravity="center"
        android:inputType="none"
        android:text="Email: Vickyrules1705@gmail.com "
        android:textColor="#2C78DA"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/linkedin"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="456dp"
        android:clickable="true"
        android:src="@drawable/img" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="Developed in Android Studio      "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignRight="@id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/androidstudio" />


  </RelativeLayout>

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="250dp"

      android:background="#0D2E59"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />


  <TextView
      android:id="@+id/dashboard"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_weight="1"
      android:clickable="true"
      android:contextClickable="true"
      android:gravity="center"
      android:paddingStart="15dp"
      android:paddingLeft="15dp"
      android:paddingTop="15dp"
      android:paddingRight="15dp"
      android:text="About"
      android:textStyle="bold"
      android:textAllCaps="true"
      android:textColor="#ffffff"
      android:textSize="20dp"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="196dp"
      android:layout_height="183dp"
      android:layout_marginTop="150dp"
      android:background="#fece2f"
      android:foregroundGravity="center"
      android:paddingTop="30dp"
      android:paddingBottom="30dp"
      android:src="@drawable/welcome_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.539"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>